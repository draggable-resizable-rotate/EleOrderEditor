{
  "exclude": [
    "node_modules",
    "config",
    "public",
    "dist",
    "build"
  ],
  // 注意 需要把 .eslintrc.js 添加进去
  "include": [
    "src",
    ".eslintrc.js"
  ],
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es2021",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
}
